<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <RelativeLayout
        android:id="@+id/activity_activitymain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.schedule.user.graduateprojectdestino.activity">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:background="@color/f68c3e"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/toolbar"
            android:layout_height="80dp" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/favortite"
            android:background="@drawable/bar6"
            android:layout_alignBottom="@+id/launch"
            android:layout_toEndOf="@+id/launch"
            android:layout_marginLeft="45dp" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/profile"
            android:background="@drawable/bar7"
            android:layout_alignTop="@+id/favortite"
            android:layout_toEndOf="@+id/favortite"
            android:layout_marginLeft="45dp" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/category"
            android:background="@drawable/bar4"
            android:layout_alignBottom="@+id/launch"
            android:layout_toStartOf="@+id/launch"
            android:layout_marginRight="45dp" />

        <ImageButton
            android:id="@+id/mainactivity"
            android:background="@drawable/bar3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/category"
            android:layout_toStartOf="@+id/category"
            android:layout_marginRight="45dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/random"
            android:background="@drawable/bar2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/random"
            android:id="@+id/ring"
            android:background="@drawable/bar1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp" />

        <ImageButton
            android:layout_width="25dp"
            android:id="@+id/launch"
            android:background="@drawable/bar5"
            android:layout_height="35dp"
            android:layout_below="@+id/ring"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@android:drawable/ic_menu_mapmode"
            android:id="@+id/map"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/ring"
            android:layout_toStartOf="@+id/ring"
            android:layout_marginRight="20dp" />


    </RelativeLayout>

    <com.mindorks.placeholderview.SwipePlaceHolderView
        android:id="@+id/swipeView"
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:layout_height="match_parent">

    </com.mindorks.placeholderview.SwipePlaceHolderView>

</FrameLayout>