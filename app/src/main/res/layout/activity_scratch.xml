<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_scratch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schedule.user.projectfortheclip.Scratch">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/f68c3e"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar"
        android:layout_height="80dp" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/favortite"
        android:background="@drawable/bar6"
        android:layout_alignBottom="@+id/launch"
        android:layout_toEndOf="@+id/launch"
        android:layout_marginLeft="45dp" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/profile"
        android:background="@drawable/bar7"
        android:layout_alignTop="@+id/favortite"
        android:layout_toEndOf="@+id/favortite"
        android:layout_marginLeft="45dp" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/category"
        android:background="@drawable/bar4"
        android:layout_alignBottom="@+id/launch"
        android:layout_toStartOf="@+id/launch"
        android:layout_marginRight="45dp" />

    <ImageButton
        android:id="@+id/mainactivity"
        android:background="@drawable/bar3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/category"
        android:layout_toStartOf="@+id/category"
        android:layout_marginRight="45dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/random"
        android:background="@drawable/bar2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/random"
        android:id="@+id/ring"
        android:background="@drawable/bar1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="25dp"
        android:id="@+id/launch"
        android:background="@drawable/bar5"
        android:layout_height="35dp"
        android:layout_below="@+id/ring"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/ic_menu_mapmode"
        android:id="@+id/map"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/ring"
        android:layout_toStartOf="@+id/ring"
        android:layout_marginRight="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imageView"
        android:visibility="invisible"
        app:srcCompat="@drawable/abc"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="200dp" />

    <com.cooltechworks.views.ScratchImageView
        android:id="@+id/sample_image"
        android:layout_width="210dp"
        android:src="@drawable/hum"
        android:layout_marginTop="34dp"
        android:adjustViewBounds="?android:attr/windowOverscan"
        android:layout_height="210dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="30dp"
        android:id="@+id/chat2"
        android:fontFamily="casual"
        android:textSize="16sp"
        android:textColor="?android:attr/actionMenuTextColor"
        android:visibility="invisible"
        android:layout_width="30dp"
        android:background="@mipmap/chat"
        android:layout_above="@+id/imageView"
        android:layout_toStartOf="@+id/random" />

</RelativeLayout>
